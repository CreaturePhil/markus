extends ../layout

block content
  .row
    .col-md-6.col-md-offset-3
      h1.text-center.space-bottom-20 Login
      form(role="form" method="post")
        input(type="hidden" name="_csrf" value=_csrf)
        .form-group
          label Email address
          input.form-control(type="email" name="email" autofocus=true required)
        .form-group
          label Password
          input.form-control(type="password" name="password" required)
        a(href="/forgot_password") Forgot your password?
        .form-group
          button.btn.btn-primary.center-block(type="submit") Login
